<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.firstdraft.draw_transmit_shapes">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Draw_transmit_shapes"
        android:usesCleartextTraffic="true">
        <activity android:name="org.firstdraft.quickdraft_shapes_ui_mobile.ListShapeElements.ShapeListActivity"></activity>
        <activity android:name="org.firstdraft.quickdraft_shapes_ui_mobile.RectanglesArrangementActivity" />
        <activity android:name="org.firstdraft.quickdraft_shapes_ui_mobile.UserFileNameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.firstdraft.quickdraft_shapes_ui_mobile.TransmitRectangleActivity" />
        <activity android:name="org.firstdraft.quickdraft_shapes_ui_mobile.FinalizeShapeActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>
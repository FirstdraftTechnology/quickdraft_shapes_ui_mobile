<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="org.firstdraft.quickdraft_shapes_ui_mobile.UserFileNameActivity">

    <EditText
            android:id="@+id/ShapeFileName"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:hint="Shape filename here!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/UserName"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:hint="Username here!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddShape"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:paddingTop="3dp"
        android:text="Add Shape"
        android:layout_marginLeft="5dp"
        android:background="@color/purple_700"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="36dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        />

</LinearLayout>